{
  "globs": ["**/*.md"],
  "ignores": [
    "**/node_modules/**",
    "**/.venv/**",
    "e2e/playwright-report/**",
    "e2e/test-results/**",
    "CHANGELOG.md",
    "RELEASE.md"
  ],
  "config": {
    // Line length 120 (matches ruff/prettier settings)
    "MD013": { "line_length": 120, "tables": false },
    // Allow duplicate headings under different parent sections (e.g. State, Methods per store)
    "MD024": { "siblings_only": true }
  }
}
